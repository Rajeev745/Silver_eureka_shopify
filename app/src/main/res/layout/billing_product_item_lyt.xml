<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="160dp"
    android:layout_margin="10dp"
    android:background="@color/g_white">

    <ImageView
        android:id="@+id/billing_product_image"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_marginStart="10dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/billing_product_name"
        style="@style/h3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Product"
        app:layout_constraintStart_toEndOf="@id/billing_product_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/billing_product_price"
        style="@style/h2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Price"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@id/billing_product_image"
        app:layout_constraintTop_toBottomOf="@id/billing_product_name" />

    <TextView
        android:id="@+id/billing_product_quantity"
        style="@style/h2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/quantity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/billing_product_image" />

    <TextView
        android:id="@+id/billing_quantity_counter"
        style="@style/h3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"
        android:text="0"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/billing_product_quantity" />


</androidx.constraintlayout.widget.ConstraintLayout>